{
    "name": "DragonWar",
    "version": "22.1.16",
    "description": "Enhanced version of Dwarium",
    "main": "out/main.js",
    "scripts": {
        "compile": "tsc",
        "start": "yarn run compile && electron .",
        "all": "yarn run prod && electron-builder -mwl",
        "mac": "yarn run prod && electron-builder -m",
        "win": "yarn run prod && electron-builder -w",
        "linux": "yarn run prod && electron-builder -l",
        "publish": "yarn run prod && electron-builder -mwl --publish always",
        "dev": "concurrently \"tsc -w\" \"electron .\"",
        "clean": "rm -rf ./out ./dist",
        "prod": "yarn run clean && yarn run compile"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^7.0.0",
        "electron": "^16.0.6",
        "electron-builder": "^22.14.5",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@electron/remote": "^2.0.1",
        "electron-reload": "^2.0.0-alpha.1",
        "axios": "^0.24.0",
        "electron-updater": "^4.6.1",
        "v8-compile-cache": "^2.3.0"
    },
    "build": {
        "appId": "com.ru.dwar",
        "productName": "Dragon War",
        "copyright": "Copyright 2022 Â©",
        "publish": [
            {
              "provider": "github",
              "owner": "dragonwarhelper",
              "repo": "project-el"
            }
          ],
        "mac": {
            "category": "public.app-category.games",
            "icon": "src/build/icon.icns",
            "identity": "Developer ID Application",
            "target": {
                "target": "default",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        },
        "win": {
            "icon": "src/build/icon.png",
            "target": {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        },
        "linux": {
            "icon": "src/build/icon.png",
            "target": {
                "target": "AppImage",
                "arch": [
                    "x64"
                ]
            }
        }
    }
}
